<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="94dp">

        <TextView
            android:id="@+id/TextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20dp" />

        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">


        <ToggleButton
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/clicked_jeomja_button"
            android:onClick="buttonClicked1"
            android:soundEffectsEnabled="false"
            android:textOff=""
            android:textOn="" />

        <ToggleButton
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/clicked_jeomja_button"
            android:onClick="buttonClicked2"
            android:soundEffectsEnabled="false"
            android:textOff=""
            android:textOn="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">


        <ToggleButton
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/clicked_jeomja_button"
            android:onClick="buttonClicked3"
            android:soundEffectsEnabled="false"
            android:textOff=""
            android:textOn="" />

        <ToggleButton
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/clicked_jeomja_button"
            android:onClick="buttonClicked4"
            android:soundEffectsEnabled="false"
            android:textOff=""
            android:textOn="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">


        <ToggleButton
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/clicked_jeomja_button"
            android:onClick="buttonClicked5"
            android:soundEffectsEnabled="false"
            android:textOff=""
            android:textOn="" />

        <ToggleButton
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/clicked_jeomja_button"
            android:onClick="buttonClicked6"
            android:soundEffectsEnabled="false"
            android:textOff=""
            android:textOn="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/space"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/space"
            android:onClick="space"
            android:text="space\n"
            android:textSize="20dp" />

        <Button
            android:id="@+id/Delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/delete"
            android:onClick="delete"
            android:textSize="20dp"
            android:text="delete\n" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ToggleButton
            android:id="@+id/Korean"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/clicked_button"
            android:checked="true"
            android:onClick="korean"
            android:textColor="#FFFFFFFF"
            android:textOff="한글"
            android:textOn="한글"
            android:textSize="30dp" />

        <ToggleButton
            android:id="@+id/English"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/clicked_button"
            android:checked="false"
            android:onClick="english"
            android:textOff="영어"
            android:textOn="영어"
            android:textSize="30dp" />

        <ToggleButton
            android:id="@+id/Number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/clicked_button"
            android:checked="false"
            android:onClick="number"
            android:textOff="숫자"
            android:textOn="숫자"
            android:textSize="30dp" />

    </LinearLayout>
</LinearLayout>
